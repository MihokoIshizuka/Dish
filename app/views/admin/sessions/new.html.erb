<div class="container">
  <div class="row justify-content-center">
    <h3>管理者ログイン</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model: @admin, url: admin_session_path do |f| %>
        <div class="form-group">
          <%= f.label :メールアドレス %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-md-6 form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %>
          <%= f.password_field :password, autocomplete: "current-password", class: "col-md-6 form-control" %>
        </div>

        <div class="form-group">
          <%= f.submit "ログイン", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

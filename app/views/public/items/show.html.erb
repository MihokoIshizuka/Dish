<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-2">
      <table class="table">
        <thead>
          <th>ジャンル検索</th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-4">
      <%= image_tag @item.get_image(300, 350) %>
    </div>
    <div class="col-md-6">
      <table class="table table-borderless">
        <tr>
          <th><%= @item.name %></th>
        </tr>
        <tr>
          <span class="badge badge-info"><%= @item.genre.name %></span>
        </tr>
        <tr>
          <td><%= simple_format(@item.introduction) %></td>
        </tr>
        <tr>
          <th>
            <%= @item.with_tax_price.to_s(:delimited) %>
            (税込み)
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>
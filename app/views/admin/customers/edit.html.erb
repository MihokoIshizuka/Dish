<div class="container">
  <div class="row jusitfy-content-center">
    <h3><%= @customer.full_name %>さんの会員情報編集</h3>
  </div>
  <div class="row jusitfy-content-center">
    <div class="col-md-8">
      <%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f| %>
        <table class="table">
          <tr>
            <td><%= f.label :"名前" %></td>
            <td>
              <%= f.text_field :last_name, autofocus: true %>
            </td>
            <td>
              <%= f.text_field :first_name, autofocus: true %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :"フリガナ" %></td>
            <td>
              <%= f.text_field :last_name_kana, autofocus: true %>
            </td>
            <td>
              <%= f.text_field :first_name_kana, autofocus: true %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :postal_code, "郵便番号" %></td>
            <td>
              <%= f.text_field :postal_code, autofocus: true %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :address, "住所" %></td>
            <td>
              <%= f.text_field :address, autofocus: true %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :telephone_number, "電話番号" %></td>
            <td>
              <%= f.text_field :telephone_number, autofocus: true %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :email, "メールアドレス" %></td>
            <td>
              <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </td>
          </tr>
          <tr>
            <td><%= f.label :is_deleted, "会員ステータス" %></td>
            <td>
              <%= f.radio_button :is_deleted, false %> <%= f.label :is_deleted, "有効", value: false %>
              <%= f.radio_button :is_deleted, true %> <%= f.label :is_deleted, "退会", value: true %>
            </td>
          </tr>
        </table>
        <div class="actions">
          <%= f.submit "変更を保存", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!DOCTYPE html>
<html>
  <head>
    <title>Dish</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarTogglerDemo03" aria-controls="navbarTogglerDemo03" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <a class="navbar-brand" href="/">Dish</a>
          <div class="collapse navbar-collapse" id="navbarTogglerDemo03">
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <% if admin_signed_in? %>
                <li class="nav-item">
                  <%= link_to "商品一覧", admin_items_path, class:"mr-3 btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "会員一覧", admin_customers_path, class:"mr-3 btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "注文履歴一覧", admin_root_path, class:"mr-3 btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ジャンル一覧", admin_genres_path, class:"mr-3 btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class:"btn" %>
                </li>
              <% if customer_signed_in? %>
                <li class="nav-item">
                  <%= link_to "マイページ", mypage_path, class:"mr-3 btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, class:"mr-3 btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "カート", cart_items_path, class:"mr-3 btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class:"btn" %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "About", about_path, class:"mr-3 btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", items_path, class:"mr-3 btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_customer_registration_path, class:"mr-3 btn" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_customer_session_path, class:"btn" %>
                </li>
              <% end %>
            </ul>
            <form class="d-flex">
              <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
              <button class="btn btn-outline-success" type="submit">Search</button>
            </form>
          </div>
        </div>
      </nav>
    </header>
    <main>
      <%= yield %>
    </main>
  </body>
</html>

<div class="container">
  <div class="row justify-content-center">
    <h3>新規登録</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
        <table class="table">
          <thead>
            <th></th>
            <th></th>
            <th></th>
          </thead>
          <tbody>
            <tr>
              <td><%= f.label :"名前" %></td>
              <td>
                <%= f.label :last_name, "(姓)" %> <%= f.text_field :last_name, autofocus: true, placeholder: "令和" %>
              </td>
              <td>
                <%= f.label :first_name, "(名)" %> <%= f.text_field :first_name, autofocus: true, placeholder: "道子" %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :"フリガナ" %></td>
              <td>
                <%= f.label :last_name_kana, "(セイ)" %> <%= f.text_field :last_name_kana, autofocus: true, placeholder: "レイワ" %>
              </td>
              <td>
                <%= f.label :first_name_kana, "(メイ)" %> <%= f.text_field :first_name_kana, autofocus: true, placeholder: "ミチコ" %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :email, "メールアドレス" %></td>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </td>
            </tr>
            <tr>
              <td><%= f.label :postal_code, "郵便番号(ハイフンなし)" %></td>
              <td>
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </td>
            </tr>
          </tbody>
        </table>
        <div class="field">
          <%= f.label :名前 %>
          <%= f.text_field :last_name, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>

        <div class="actions">
          <%= f.submit "ログイン" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<%= render "admin/shared/links" %>


<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "publics/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>

<div class="container">
  <div class="row justify-content-center">
    <h3>商品一覧(全<%= @items.count %>件)</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-2">
      <table class="table">
        <thead>
          <th>ジャンル検索</th>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-md-8">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-md-3">
            <div class="card">
              <%= image_tag item.get_image(150,250) %>
              <div class="card-body">
                <p class="card-title"><%= item.name %></p>
                <p class="card-title"><%= item.price %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
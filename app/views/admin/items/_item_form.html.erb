<div class="form-group">
  <%= f.label :"商品画像" %>
  <%= f.file_field :image, accept: "image/*" %>
</div>
<div class="form-group">
  <%= f.label :"商品名" %>
  <%= f.text_field :name %>
</div>
<div class="form-group">
  <%= f.label :"商品説明" %>
  <%= f.text_area :introduction %>
</div>
<div class="form-group">
  <%= f.label :"ジャンル" %>
  <%= f.select :genre_id, options_from_collection_for_select(Genre.all, :id, :name) %>
</div>
<div class="form-group">
  <%= f.label :"税抜き価格" %>
  <%= f.number_field :price %>円
</div>
<div class="form-group">
  <%= f.label :"販売ステータス" %>
  <div>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, "販売中", value: true %>
  </div>
  <div>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, "販売停止中", value: false %>
  </div>
</div>


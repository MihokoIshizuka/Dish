<div class="container">
  <div class="row justify-content-center">
    <h3><%= @customer.full_name %>さんの注文履歴</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-8">
      <table class="table">
        <thead>
          <tr>
            <th>購入日時</th>
            <th>注文個数</th>
            <th>注文ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
            <tr>
              <td><%= order.created_at %></td>
              <td><%= order.</td>
            </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
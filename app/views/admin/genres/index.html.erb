<div class="container">
  <div class="row justify-content-center">
    <h3>ジャンル一覧・追加</h3>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @genre, url: admin_genres_path, method: :post, class: "text-center" do |f| %>
        <%= render 'admin/genres/genre_form', f: f %>
        <div class="form-group">
          <%= f.submit :"新規登録", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-md-6 text-center">
      <table class="table">
        <thead>
          <tr>
            <th>ジャンル</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
            <tr>
              <td><%= genre.name %></td>
              <td>
                <%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-success" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>